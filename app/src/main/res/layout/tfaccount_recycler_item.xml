<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/selector_tfacoount_item"
    android:padding="8dp">

    <ImageView android:id="@+id/tfaccount_truckImage"
        android:layout_width="120dp"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1">

        <TextView android:id="@+id/tfaccount_truckName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:maxLines="2"></TextView>

        <LinearLayout android:id="@+id/tfaccount_truckPriceInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tfaccount_truckName"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:layout_marginRight="2dp"
                android:textColor="@color/red"
                android:textSize="22sp"/>

            <TextView android:id="@+id/tfaccount_truckPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/red"
                android:text="234"/>
        </LinearLayout>

        <Button android:id="@+id/tfaccount_truckBuy"
            android:layout_below="@+id/tfaccount_truckPriceInfo"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="立即购买"
            android:background="@drawable/selector_button"
            android:textColor="@color/white" />
    </RelativeLayout>
</LinearLayout>